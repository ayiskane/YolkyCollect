<h1>Home#index</h1>
<p>Find me in app/views/home/index.html.erb</p>

<% @posts.each do |post| %>
  <div class="card bg-light mb-3" style="max-width: 18rem;">
    <div class="card-header"><%= post.title %></div>
    <div class="card-body">
      <p class="card-text"><%= post.content %></p>
    </div>
  </div>
<% end %>

<% if @posts.empty? %>
  <p>No posts available.</p>
<% end %>