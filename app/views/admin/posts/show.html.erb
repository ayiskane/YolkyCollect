<div class="container">
  <a data-mdb-ripple-init class="btn btn-outline-secondary flex" href="<%= admin_posts_path %>" role="button">
    <i class="fa-sharp fa-solid fa-chevron-left"></i> Back
  </a>
  <h1 class="mt-4"><%= @post.title %></h1>

  <p class="lead"><%= @post.content %></p>

  <p><strong>Created At:</strong> <%= @post.created_at.strftime("%B %d, %Y") %></p>

  <%= form_with(url: admin_post_path(@post), model: @post, local: false, data: { turbo: true }) do |form| %>
    <div class="form-check">
      <%= form.check_box :show, class: "form-check-input", checked: @post.show %>
      <%= form.label :show, "Show Post", class: "form-check-label" %>
    </div>
    
    <div class="mt-3">
      <%= form.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
  <div class="mt-3">
    <%= button_to 'Delete Post', 
                  admin_post_path(@post), 
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this post?' },
                  class: 'btn btn-danger ml-2' 
    %>
  </div>
</div>