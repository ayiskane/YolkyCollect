{
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "[erb]": {
    "editor.defaultFormatter": "aliariff.vscode-erb-beautify",
    "editor.formatOnSave": true
  },
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "rubocop.vscode-rubocop",
    "editor.foldingImportsByDefault": true
  },
  "files.associations": {
    "*.erb": "erb"
  },
  "vscode-erb-beautify.customEnvVar": {
    "LC_ALL": "en_US.UTF-8"
  },
  "vscode-erb-beautify.tab": true,
  "vscode-erb-beautify.keepBlankLines": 2,
  "vscode-erb-beautify.tabStops": 0,
  "vscode-erb-beautify.indentBy": 0
}
